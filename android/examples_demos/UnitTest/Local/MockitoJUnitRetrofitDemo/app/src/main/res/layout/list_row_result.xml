<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    tools:showIn="@layout/content_main">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_place_holder" />

    <TextView
        android:id="@+id/tvPerson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/circleView"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/circleView"
        android:layout_toRightOf="@+id/circleView"
        android:drawableLeft="@drawable/ic_so"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvReputation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPerson_name"
        android:layout_alignStart="@+id/tvPerson_name"
        android:layout_below="@+id/tvPerson_name"
        android:layout_marginLeft="10dp"
        android:autoLink="email"
        android:clickable="true"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvReputation"
        android:layout_alignStart="@id/tvReputation"
        android:layout_below="@+id/tvReputation"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/drawable_gold_badge" />

        <TextView
            android:id="@+id/tvGoldBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="125" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/drawable_silver_badge" />

        <TextView
            android:id="@+id/tvSilverBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            tools:text="125" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/drawable_bronz_badge" />

        <TextView
            android:id="@+id/tvBronzeBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            tools:text="125" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/circleView"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent" />

</RelativeLayout>

